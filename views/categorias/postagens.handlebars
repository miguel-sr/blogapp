{{#each postagens}}
  <div class="card my-4">
    <div class="card-body">
      <h3>{{titulo}}</h3>
      <p>{{descricao}}</p>
      <a href="/postagem/{{slug}}">
        <button class="btn btn-success">Leia mais</button>
      </a>
      <br>
      <small>Data de publicação: {{date}}</small>
    </div>
  </div>
{{else}}
  <h4>Nenhuma postagem recente</h4>
{{/each}}