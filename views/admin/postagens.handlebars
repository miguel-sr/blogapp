<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Categoria: {{categoria.nome}}</small>
      <br>
      <small>Slug: {{slug}}</small>
      <br>
      <small>Criado em: {{date}}</small>
      <br>
      <div class="d-flex">
        <a href="/admin/postagens/edit/{{_id}}" class="me-4">
          <button class="btn btn-success mt-4">Editar postagem</button>
        </a>
        <form action="/admin/postagens/deletar" method="POST">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-danger mt-4">Deletar categoria</button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <h4 class="mt-3"> > Nenhuma postagem registrada</h4>
{{/each}}