<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add">
  <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small>
      <br>
      <small>Criado em: {{date}}</small>
      <br>
      <div class="d-flex">
        <a href="/admin/categorias/edit/{{_id}}" class="me-4">
          <button class="btn btn-success mt-4">Editar categoria</button>
        </a>
        <form action="/admin/categorias/deletar" method="POST">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-danger mt-4">Deletar categoria</button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <h4 class="mt-3"> > Nenhuma categoria registrada</h4>
{{/each}}